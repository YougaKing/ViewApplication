<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="youga.viewapplication.CanvasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FDCE4F">

            <youga.viewapplication.canvas.LeafView
                android:id="@+id/leafView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
        </FrameLayout>

        <youga.viewapplication.canvas.LoadingView
            android:layout_marginTop="10dp"
            android:id="@+id/loadingView"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <youga.viewapplication.canvas.CanvasPath
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <youga.viewapplication.canvas.CanvasText
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <youga.viewapplication.canvas.CheckView
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <youga.viewapplication.canvas.CanvasBitmap
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <youga.viewapplication.canvas.CanvasView
            android:id="@+id/activity_canves"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:context="youga.viewapplication.CanvasActivity"/>

        <youga.viewapplication.canvas.CakeView
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <youga.viewapplication.canvas.ClothView
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

    </LinearLayout>
</ScrollView>
